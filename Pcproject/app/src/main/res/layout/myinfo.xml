<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".myinfo"
    android:background="@drawable/s1">

    <TextView
        android:background="#B7FFEB3B"
        android:layout_marginLeft="120dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내정보 수정"
            android:textSize="10sp"
            android:id="@+id/midUpdate"
            android:background="@drawable/usedseat"
            android:layout_marginRight="5dp"
            android:onClick="OnclickUpdate"/>

            <Button
                android:id="@+id/midRemove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/usedseat"
                android:text="회원 탈퇴"
                android:textSize="10sp"
                android:onClick="Onclickremove"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="아이디     : "
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="비밀번호 : "
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="이름         : "
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="휴대폰     : "
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="적립시간 :"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tvId"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tvPw"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tvName"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:id="@+id/tvHp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="130dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tvTime"
                android:textColor="#000000"/>

        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="예약 확인"
            android:textSize="20sp"
            android:id="@+id/mSeatrese"
            android:background="@drawable/reseseat"
            android:layout_marginRight="5dp"
            android:onClick="Onclickrevecheck"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="시간 추가"
            android:textSize="20sp"
            android:id="@+id/mTimeAdd"
            android:background="@drawable/reseseat"
            android:layout_marginLeft="5dp"
            android:onClick="OnclickTimeadd"/>



    </LinearLayout>


</LinearLayout>