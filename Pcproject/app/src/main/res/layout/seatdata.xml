<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="760px"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FAFFEB3B"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".seatdata"
    android:id="@+id/zz">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한조 PC방 좌석 정보"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#FF9800"/>

    <!--
    사용중인 좌석 == 하늘색
    예약중인 좌석 == 빨간색
    빈 좌석 == 흰색
    -->

    <!--
    1~5번PC
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt1"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt2"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt3"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt4"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reseseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt5"/>
    </LinearLayout>

    <!--
    6~10번 PC
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt6"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reseseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt7"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reseseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt8"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt9"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt10"/>
    </LinearLayout>

    <!--
    좌석 정보
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   빈 좌석"
                android:textColor="#000000"/>
            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blankseat"
                android:layout_marginRight="10dp"
                android:id="@+id/blankseat"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   예약 중"
                android:textColor="#ED1C24"/>
            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/reseseat"
                android:layout_marginRight="10dp"
                android:id="@+id/reseseat"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   사용 중"
                android:textColor="#00ADEF"/>
            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/usedseat"
                android:layout_marginRight="10dp"
                android:id="@+id/usedseat"/>


        </LinearLayout>


    </LinearLayout>

    <!--
    11~15번 PC
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt11"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt12"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/blankseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt13"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reseseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt14"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reseseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt15"/>
    </LinearLayout>

    <!--
    16~20번 PC
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt16"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt17"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt18"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt19"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/usedseat"
            android:onClick="Onclickseat"
            android:id="@+id/bt20"/>
    </LinearLayout>



</LinearLayout>